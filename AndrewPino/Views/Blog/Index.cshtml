@{
    ViewData["Title"] = "Blog for Andrew Pino: Andrew Pino";
}
@model List<AndrewPino.BlogDb.DataModels.Blog>;

<div class="container mt-3">
  @foreach (var blog in Model)
  {
    <div class="row">
      <div class="col">
        <div class="row">
          <div class="col-8">
            <h4><strong><a href="#">@blog.Title</a></strong></h4>
          </div>
        </div>
        <div class="row">
          <div class="col-2">
            @if (!String.IsNullOrEmpty(blog.ImageUrl))
            {
              <a href="#">
                <img src="~/blog_images/@blog.ImageUrl" class="img-thumbnail" alt="@blog.Title">
              </a>
            }
          </div>
          <div class="col-8">
            <p>
              @blog.Body
            </p>
            @* <p><a class="btn" href="#">Read more</a></p> *@
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <p></p>
            <p>
              <i class="far fa-user"></i> by <a href="#">John</a>
            | <i class="far fa-calendar-alt"></i> @blog.CreatedDate
            | <i class="far fa-comment-alt"></i> <a href="#">@blog.BlogComments.Count Comments</a>
            @* | <i class="far fa-share-square"></i> <a href="#">39 Shares</a> *@
            | <i class="fa fa-tags"></i> Tags :
              @foreach (var tag in blog.BlogBlogTags.Select(bbt => bbt.BlogTag))
              {
                <a href="#"><span class="badge badge-pill badge-primary">@tag.TagText</span></a>
              }
            </p>
          </div>
        </div>
      </div>
    </div>
    <hr>
  }
</div>